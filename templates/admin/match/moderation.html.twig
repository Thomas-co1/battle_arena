{% extends 'base.html.twig' %}

{% block title %}Modération - Admin{% endblock %}
{% block content %}
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="text-white">⚠️ Matchs à Modérer</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {% if matches %}
                <div class="card">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Tournoi</th>
                                    <th>Joueur 1</th>
                                    <th>Joueur 2</th>
                                    <th>Résultats Soumis</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for match in matches %}
                                    <tr class="table-danger">
                                        <td>{{ match.tournament.name }}</td>
                                        <td>{{ match.player1.gamertag }} ({{ match.player1Result.getLabel() }})</td>
                                        <td>{{ match.player2.gamertag }} ({{ match.player2Result.getLabel() }})</td>
                                        <td>{{ match.updatedAt|date('d/m H:i') }}</td>
                                        <td>
                                            <a href="{{ path('admin_match_resolve', {id: match.id}) }}" class="btn btn-warning btn-sm">Résoudre</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-success">Aucun match à modérer ✓</div>
            {% endif %}
        </div>
    </div>
{% endblock %}
